<% if @user.errors.any? %>
  <h2>The following errors prevented your sign up from being saved</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg|%>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <p>
    <%= f.label :username %> <br>
    <%= f.text_field :username, placeholder: "Enter a Username"  %>
  </p>
  
  <p>
    <%= f.label :email %> <br>
    <%= f.email_field :email, placeholde: "Enter a valid email" %>
  </p>  

  <p>
    <%= f.label :password %> <br> <%# even though the col name is password digest the virtual attribute will run as password%>
    <%= f.password_field :password, placeholde: "Enter a strong password" %>
  </p>  

  <p>
    <%= f.submit "Sign up", class: "signUpButton"%>
      <div>
        <%= link_to 'Return to Main Page', root_path %>
      </div>
  </p>
   
   <% end %>
  