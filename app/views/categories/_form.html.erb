
  <% if @category.errors.any? %>
    <h2>The following errors prevented the category from being saved</h2>
    <ul>
      <% @category.errors.full_messages.each do |msg|%>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @category, local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :category_name, class: "col-2 col-form-label" %> 
        <div class="col-10">
          <%= f.text_field :category_name, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
      <%= f.label :remarks, class: "col-2 col-form-label" %> <br>
      <div class="col-10">
        <%= f.text_area :remarks, rows: 5, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.submit "Add Category", class:"btn btn-outline-light btn-lg" %>
    </div>
    
    <% end %>

    <div>
  </div>

