<div id="page-content">
  <div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-10 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              Created by <%= category.user.username %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.category_name, category_path(category), class: "text-info"%></p>
              <p class="card-text"><%= truncate(category.remarks, length: 100) %></p>
              
              
              <%= link_to "Show", category_path(category), class:"btn btn-outline-info" %>
              <%= link_to "Edit", edit_category_path(category), class:"btn btn-outline-success" %>
              <%= link_to "Delete", category_path(category), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(category.created_at) %> ago,
              edited <%= time_ago_in_words(category.updated_at) %> ago </small>
            </div>
        </div>
      </div>
      </div>
    <% end %>
  </div> 
</div>


      


